<?xml version="1.0"?>
<launch>
  <!-- The planning and execution components of MoveIt! configured to run -->
  <!-- using the ROS-Industrial interface. -->
 
  <rosparam command="load" file="$(find duco_gcr3_moveit_config)/config/joint_names.yaml"/>

  <!-- the "sim" argument controls whether we connect to a Simulated or Real robot -->
  <!--  - if sim=false, a robot_ip argument is required -->
  <arg name="sim" default="false" />
  <arg name="robot_ip" default="127.0.0.1"/>
  <arg name="speed" default="0.5"/>
 
  <!-- load the robot_description parameter before launching ROS-I nodes -->
  <include file="$(find duco_gcr3_moveit_config)/launch/planning_context.launch" >
    <arg name="load_robot_description" value="true" />
  </include>

  
  <!-- joint_trajectory_action: provides actionlib interface for high-level robot control -->
  <node pkg="duco_controller" type="duco_joint_trajectory_action" name="duco_joint_trajectory_action" output="screen"/>

  <!-- run the "real robot" interface nodes -->
  <!--   - this typically includes: robot_state, motion_interface, and joint_trajectory_action nodes -->
  <!--   - replace these calls with appropriate robot-specific calls or launch files -->
  <!--<group unless="$(arg sim)">
    <include file="$(find duco_gcr3_moveit_config)/launch/robot_interface.launch" >
      <arg name="robot_ip" value="$(arg robot_ip)"/>
    </include>
  </group> -->

 <!-- publish the robot state (tf transforms) -->
  <node name="duco_driver" pkg="duco_driver" type="duco_driver">
  <param name="/server_host" type="str" value="$(arg robot_ip)"/>
  <param name="/speed"  type="str" value="0.5"/>
  </node>

  <!-- publish the robot state (tf transforms) -->
  <node name="robot_status" pkg="duco_driver" type="robot_status">
  <param name="/server_host" type="str" value="$(arg robot_ip)"/>
  </node>

  <!-- publish the robot state (tf transforms) -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <include file="$(find duco_gcr3_moveit_config)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
  </include>

  <include file="$(find duco_gcr3_moveit_config)/launch/moveit_rviz.launch">
    <arg name="config" value="true"/>
  </include>
  
  <!--<include file="$(find duco_gcr3_moveit_config)/launch/default_warehouse_db.launch" />-->

</launch>
